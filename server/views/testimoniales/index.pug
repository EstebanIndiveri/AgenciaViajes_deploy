extends ../layout/index 
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un Testimonio
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales",method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre",class="form-control", type="text", name="nombre",placeholder="Tu nombre", value=nombre)
                            .form-group
                                label(for="correo") Correo
                                input(id="correo",class="form-control", type="email", name="correo",placeholder="Tu Correo Electr√≥nico",value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control",name="mensaje", rows="3",placeholder="Tu Mensaje")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")